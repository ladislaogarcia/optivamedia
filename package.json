  "main": "index.js",
  "scripts": {
    "start": "npm run server:start && npm run client:start",
    "server:build": "cd server && npm run build",    
    "server:start": "cd ./server && npm start",
    "server:check": "npm run lint && npm run format",
    "server:check:fix": "npm run lint:fix && npm run format:fix",
    "server:lint": "eslint .",
    "server:lint:fix": "eslint . --fix",
    "server:format": "npx prettier . --list-different",
    "server:format:fix": "npx prettier . --write --list-different",
    "server:test": "cd ./server && ng test",
    "client:build": "cd client && npm run build:ssr",
    "client:start": "cd ./client && npm run serve:ssr",
    "client:lint": "cd ./client && npm run lint",
    "client:lint:fix": "cd ./client && npm run lint:fix",
    "client.format": "cd ./client && npm run format",
    "client.format:fix": "cd ./client && npm run format:fix",
    "client:check": "cd ./client && npm run check",
    "client:check:fix": "cd ./client && npm run check:fix",
    "client:test": "cd ./client && ng test",
    "test": "npm run client:test"
  },
