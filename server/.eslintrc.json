{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "standard",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "ignorePatterns": ["**/dist/*.*", "**/test/*.*"],
  "rules": {
    "semi": 0,
    "indent": ["error", 2],
    "space-before-function-paren": ["error", "never"],
    "no-comma-dangle": 0
  }
}
